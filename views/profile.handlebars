

<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>


{{#if reservation}}

<body class="m-3">
  <div class="card">
    <div class="card-header bg-secondary text-white">
      Currently Booked Ticket
    </div>
    <div class="card-body">
      <table class="table table-sm table-hover">
        <thead>
          <tr>
            <th scope="col">Station</th>
            <th scope="col">Time</th>
          </tr>
        <tbody>
          <tr>
            <td>{{{station.name}}}</td>
            <td>{{{reservation.depart_time}}}</td>
          </tr>
        </tbody>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</body>

{{else}}

<button>Make a Reservation</button>

{{/if}}
